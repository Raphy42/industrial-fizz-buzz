{
  "tasks": {
    "compile": "deno compile --allow-read --allow-net ./src/index.ts --output ./dist/server",
    "run": "deno run --allow-net --allow-env src/index.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  }
}